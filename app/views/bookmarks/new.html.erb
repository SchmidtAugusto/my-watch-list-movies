<div class="border border-2 mt-3">
  <nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
      <span class="navbar-brand mb-0 h1">Add movie</span>
    </div>
  </nav>

  <div class="d-flex justify-content-center">
    <div class="mt-5 text-start w-50 my-form">
      <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.association :movie, collection: Movie.all.order(:title), label: 'Movie Name:'%>
        <div class="text-center mt-5 mb-3">
          <%= f.submit 'Add', class: "btn btn-outline-secondary m-auto"%>
          <%= link_to "Cancel", list_path(@list), {class: "btn btn-outline-secondary m-auto"} %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% @movies.each do |movie| %>
  <div class="card m-2 p-3 " style="max-width: 540px; max-height: 285px">
      <div class="row g-0">
        <div class="col-md-4">
          <img src="<%= movie.poster_url %>" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
          <div class="card-body d-flex flex-column pb-0">
            <h5 class="card-title"><%= movie.title  %></h5>
            <p class="card-text truncate-line-clamp"><%= movie.overview %></p>
            <div class="d-flex justify-content-star">
              <p class="card-text ms-3 mt-1"><%= movie.rating %> <i class="fa-solid fa-star" style="color: #f2d418;"></i></p>
            </div>
            <div class="d-flex justify-content-end position-absolute bottom-0 end-0 p-3">
              <%= link_to 'Add',  new_list_bookmark_path(@list), class: "btn btn-outline-secondary" %>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>
