<div class="row border border-2 mt-3">
  <nav class="navbar navbar-dark bg-dark">
    <div class="container">
        <span class="navbar-brand mb-0">Add movie</span>
        <%= link_to "Cancel", list_path(@list), class: "navbar-brand"  %>
    </div>
  </nav>



  <div class="row mt-3">
    <% @movies.each do |movie| %>
      <% next if @list.movies.include?(movie) %>
      <div class="d-flex col-4">
        <div class="card m-2 p-3" style="max-width: 420px; max-height: 285px">
            <div class="row g-0">
              <div class="col-md-4">
                <img src="<%= movie.poster_url %>" class="img-fluid rounded-start" alt="...">
              </div>
              <div class="col-md-8">
                <div class="card-body d-flex flex-column pb-0">
                  <h5 class="card-title"><%= movie.title  %></h5>
                  <p class="card-text truncate-line-clamp"><%= movie.overview %></p>
                  <div class="d-flex justify-content-star">
                    <p class="card-text ms-3 mt-1"><%= movie.rating %> <i class="fa-solid fa-star" style="color: #f2d418;"></i></p>
                  </div>
                  <div class="d-flex justify-content-end position-absolute bottom-0 end-0 p-3">
                    <%= simple_form_for [@list, @bookmark] do |f| %>
                      <%= f.hidden_field :movie_id, value: movie.id %>
                      <%= f.submit 'Add', class: "btn btn-outline-secondary m-auto"%>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
