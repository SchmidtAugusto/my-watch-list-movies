<div class="border border-3 rounded-4 mt-3 mb-3" id="show-list-page">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark nav-rounded">
    <div class="container-fluid">
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
        <%= link_to @list.name, lists_path, class: "navbar-brand"%>
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <%= link_to "Home", lists_path, class: "nav-link"%>
          </li>
        </ul>
        <ul class="navbar-nav me-3 mb-2 mb-lg-0">
          <li class="nav-item">
            <%= link_to "Add movie", new_list_bookmark_path(@list), class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Delete list', list_path(@list), data: { turbo_method: :delete, turbo_confirm: 'are u sure?' }, class: "nav-link" %>
          </li>
        </ul>
        <form class="d-flex">
          <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
      </div>
    </div>
  </nav>

  <div class="row justify-content-center p-3">
    <% @bookmarks.each do |bookmark| %>
      <div class="card m-2 p-3 " style="max-width: 540px; max-height: 285px">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="<%= bookmark.movie[:poster_url] %>" class="img-fluid rounded-start" alt="...">
          </div>
          <div class="col-md-8">
            <div class="card-body d-flex flex-column pb-0">
              <h5 class="card-title"><%= bookmark.movie[:title]  %></h5>
              <p class="card-text truncate-line-clamp"><%= bookmark.movie[:overview] %></p>
              <div class="d-flex justify-content-star">
                <p class="card-text ms-3 mt-1"><%= bookmark.movie[:rating] %> <i class="fa-solid fa-star" style="color: #f2d418;"></i></p>
              </div>
              <div class="d-flex justify-content-end position-absolute bottom-0 end-0 p-3">
                <%= link_to 'Delete',  bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'are u sure?' }, class: "btn btn-outline-secondary" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
