<h1 class="mt-3"><%= @list.name %></h1>

<div class="row justify-content-center p-5">
  <div class="card p-3" style="width: 800px">
    <% @bookmarks.each do |bookmark| %>
      <div class="card-body">
        <p class="card-text"><%= bookmark.movie[:title] %></p>
        <%= link_to 'Delete',  bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'are u sure?' }, class: "btn btn-outline-secondary m-auto" %>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="p-3">
    <%= link_to 'Delete', list_path(@list), data: { turbo_method: :delete, turbo_confirm: 'are u sure?' }, class: "btn btn-outline-secondary m-auto" %>

    <%= link_to 'Back', lists_path, class: "btn btn-outline-secondary m-auto" %>

    <%= link_to "Add movie", new_list_bookmark_path(@list), class: "btn btn-outline-secondary m-auto" %>
  </div>
</div>
